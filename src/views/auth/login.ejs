<section class="login">
  <h1>Acceso</h1>
  <% if (error) { %>
  <div class="alert" style="color: #b00"><%= error %></div>
  <% } %>

  <form
    method="post"
    action="/login<%= typeof next !== 'undefined' ? ('?next='+encodeURIComponent(next)) : '' %>"
  >
    <div>
      <label>Usuario</label>
      <input name="username" required autofocus />
    </div>
    <div>
      <label>Contrase√±a</label>
      <input type="password" name="password" required />
    </div>
    <button type="submit">Entrar</button>
  </form>
</section>
