<article class="detail">
  <h1><%= item.title %></h1>
  <div class="media">
    <img src="<%= item.imageUrl || 'https://placehold.co/800x500?text=Imagen' %>" alt="<%= item.title %>" />
    <div class="info">
      <% if (item.category) { %><p><strong>Categor√≠a:</strong> <%= item.category %></p><% } %>
      <% if (item.audioUrl) { %>
        <p><strong>Audio:</strong></p>
        <audio controls src="<%= item.audioUrl %>"></audio>
      <% } %>
      <% if (item.videoUrl) { %>
        <p><strong>Video:</strong></p>
        <video controls width="480" src="<%= item.videoUrl %>"></video>
      <% } %>
    </div>
  </div>
  <p class="desc"><%= item.description %></p>
  <% if (item.comments) { %>
    <div class="comments"><strong>Comentarios:</strong><br><%= item.comments %></div>
  <% } %>
</article>
